# 环境变量配置文件
# 复制此文件为 .env.local 并根据实际情况修改配置

# 应用环境 (development | production | staging)
VITE_APP_ENV=development

# API 基础URL
# 开发环境
VITE_API_BASE_URL_DEV=http://35.209.49.134:8030
# 预发布环境  
VITE_API_BASE_URL_STAGING=https://staging-api.producthot.top
# 生产环境
VITE_API_BASE_URL_PROD=https://api.producthot.top

# 当前使用的API URL (会覆盖环境配置中的默认值)
VITE_API_BASE_URL=http://localhost:8000

# 功能开关
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_MOCK_DATA=true

# 日志配置
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_REMOTE_LOG=false

# 性能配置
VITE_ENABLE_CACHING=false
VITE_CACHE_TIMEOUT=300000
VITE_ENABLE_LAZY_LOADING=false

# 安全配置
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS=false
VITE_TOKEN_EXPIRY=86400000

# 第三方服务配置
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_ANALYTICS_ID=your_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn

# 应用信息
VITE_APP_NAME=ProductHot
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered product insights platform